# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

# to follow pep8 standards
[*.py]
indent_size = 4

[Makefile]
indent_style = tab

[*.cfg]
indent_style = tab

[*.java]
ij_java_class_count_to_use_import_on_demand = 9999
